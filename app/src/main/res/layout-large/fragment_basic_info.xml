<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_margin_min"
        android:fadingEdge="none"
        android:fillViewport="false"
        android:measureAllChildren="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ph.com.swak.view.CircularImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="@dimen/prof_pic_width"
                    android:layout_height="@dimen/prof_pic_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/activity_margin_min"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:src="@drawable/default_pic"
                    app:border_color="@color/primary_border"
                    app:border_width="2dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/layer_padding">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/layer_padding"
                        android:text="Gerald Sangines Tayag"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/primary_active"
                        android:textSize="@dimen/abc_text_size_headline_material" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_info"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_min"
                    android:layout_marginLeft="@dimen/activity_margin_max"
                    android:layout_marginRight="@dimen/activity_margin_max"
                    android:layout_marginTop="@dimen/login_margin"
                    android:background="@drawable/border_primary"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/primary_border"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_padding_min"
                        android:paddingLeft="@dimen/activity_margin_min"
                        android:paddingRight="@dimen/activity_vertical_margin"
                        android:paddingTop="@dimen/activity_padding_min"
                        android:layout_margin="2dp">

                        <TextView
                            android:id="@+id/lblBasic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basic Information"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/abc_text_size_headline_material"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/activity_margin_min"
                        android:layout_marginRight="@dimen/activity_margin_min"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_max"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lblBirthday"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Birthday"
                                android:textColor="@color/text_color_invert"
                                android:textSize="@dimen/abc_text_size_large_material"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lblAge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center|left"
                                android:text="Age"
                                android:textColor="@color/text_color_invert"
                                android:textSize="@dimen/abc_text_size_large_material"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtBirthday"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:text="November 25, 1994"
                                android:textColor="#3e3c3c"
                                android:textSize="@dimen/abc_text_size_medium_material" />

                            <TextView
                                android:id="@+id/txtAge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center|left"
                                android:singleLine="true"
                                android:text="20"
                                android:textColor="#3e3c3c"
                                android:textSize="@dimen/abc_text_size_medium_material" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/activity_margin_min"
                        android:layout_marginRight="@dimen/activity_margin_min"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_max"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lblStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Civil Status"
                                android:textColor="@color/text_color_invert"
                                android:textSize="@dimen/abc_text_size_large_material"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lblGender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Gender"
                                android:textColor="@color/text_color_invert"
                                android:textSize="@dimen/abc_text_size_large_material"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:text="Single"
                                android:textColor="#3e3c3c"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/abc_text_size_medium_material" />

                            <TextView
                                android:id="@+id/txtGender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:singleLine="true"
                                android:text="Male"
                                android:textColor="#3e3c3c"
                                android:textSize="@dimen/abc_text_size_medium_material" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/activity_margin_min"
                        android:layout_marginRight="@dimen/activity_margin_min"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_max"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblCompany"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Company"
                            android:textColor="@color/text_color_invert"
                            android:textSize="@dimen/abc_text_size_large_material"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtCompany"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="SWAK.COM.PH INC"
                            android:textColor="#3e3c3c"
                            android:textSize="@dimen/abc_text_size_medium_material" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/activity_margin_min"
                        android:layout_marginRight="@dimen/activity_margin_min"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_max"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblDepartment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Department"
                            android:textColor="@color/text_color_invert"
                            android:textSize="@dimen/abc_text_size_large_material"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtDepartment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="SWAK.NET"
                            android:textColor="#3e3c3c"
                            android:textSize="@dimen/abc_text_size_medium_material" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/activity_margin_min"
                        android:layout_marginRight="@dimen/activity_margin_min"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_max"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblDesignation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Designation"
                            android:textColor="@color/text_color_invert"
                            android:textSize="@dimen/abc_text_size_large_material"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtDesignation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Programmer"
                            android:textColor="#3e3c3c"
                            android:textSize="@dimen/abc_text_size_medium_material" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/activity_margin_min"
                        android:layout_marginRight="@dimen/activity_margin_min"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_max"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lblSSS"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="SSS"
                                android:textColor="@color/text_color_invert"
                                android:textSize="@dimen/abc_text_size_large_material"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lblTIN"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="T.I.N"
                                android:textColor="@color/text_color_invert"
                                android:textSize="@dimen/abc_text_size_large_material"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtSSS"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:text="34-4466059-5"
                                android:textColor="#3e3c3c"
                                android:textSize="@dimen/abc_text_size_medium_material" />

                            <TextView
                                android:id="@+id/txtTIN"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:singleLine="true"
                                android:text="111-111-111"
                                android:textColor="#3e3c3c"
                                android:textSize="@dimen/abc_text_size_medium_material" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/activity_margin_min"
                        android:layout_marginRight="@dimen/activity_margin_min"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_max"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblPhil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Philhealth No."
                            android:textColor="@color/text_color_invert"
                            android:textSize="@dimen/abc_text_size_large_material"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtPhil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="11111111111"
                            android:textColor="#3e3c3c"
                            android:textSize="@dimen/abc_text_size_medium_material" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/activity_margin_min"
                        android:layout_marginRight="@dimen/activity_margin_min"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_max"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblPagibig"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pag-ibig No."
                            android:textColor="@color/text_color_invert"
                            android:textSize="@dimen/abc_text_size_large_material"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtPagibig"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="11111111111111"
                            android:textColor="#3e3c3c"
                            android:textSize="@dimen/abc_text_size_medium_material" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/triangle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/primary_triangle" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>