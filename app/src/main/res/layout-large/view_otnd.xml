<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_border_primary"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:fillViewport="true"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp">

            <LinearLayout
                android:id="@+id/row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtDateFiled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_margin="@dimen/activity_margin_min"
                            android:gravity="center"
                            android:minWidth="@dimen/column_mid_width"
                            android:text="Date Filed"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/text_color_invert"
                            android:textSize="@dimen/abc_text_size_medium_material" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/activity_margin_min"
                            android:layout_marginRight="@dimen/activity_margin_min"
                            android:background="@color/table_border" />

                        <TextView
                            android:id="@+id/txtType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="@dimen/activity_margin_min"
                            android:gravity="center"
                            android:minWidth="@dimen/column_max_width"
                            android:text="Type"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/text_color_invert"
                            android:textSize="@dimen/abc_text_size_medium_material" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/activity_margin_min"
                            android:layout_marginRight="@dimen/activity_margin_min"
                            android:background="@color/table_border" />

                        <TextView
                            android:id="@+id/txtHours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_margin="@dimen/activity_margin_min"
                            android:gravity="center"
                            android:minWidth="@dimen/column_min_width"
                            android:text="# hr(s)"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/text_color_invert"
                            android:textSize="@dimen/abc_text_size_medium_material" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/activity_margin_min"
                            android:layout_marginRight="@dimen/activity_margin_min"
                            android:background="@color/table_border" />

                        <TextView
                            android:id="@+id/txtStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="3"
                            android:layout_margin="@dimen/activity_margin_min"
                            android:gravity="center"
                            android:minWidth="@dimen/column_mid_width"
                            android:text="Status"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/text_color_invert"
                            android:textSize="@dimen/abc_text_size_medium_material" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/table_border" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</RelativeLayout>