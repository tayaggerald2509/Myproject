<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:touchscreenBlocksFocus="false">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_warning_selector"
            android:drawableLeft="@drawable/ic_action_cancel"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="Close"
            android:textColor="@color/text_color"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@color/line" />

        <Button
            android:id="@+id/btnFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_primary_selector"
            android:drawableLeft="@drawable/ic_action_accept"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="FILE"
            android:textColor="@color/text_color"
            android:textSize="@dimen/abc_text_size_medium_material" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_min"
            android:layout_marginRight="@dimen/activity_margin_min"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File OT / ND"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/abc_text_size_display_1_material" />

                <TextView
                    android:id="@+id/txtCurrentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="April 4, 2015"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/abc_text_size_menu_material" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_OTND"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:id="@+id/otnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_min"
                    android:layout_marginLeft="@dimen/activity_margin_min"
                    android:layout_marginRight="@dimen/activity_margin_min"
                    android:layout_marginTop="@dimen/login_margin"
                    android:background="@drawable/background_login"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/customPanel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:layout_marginLeft="@dimen/activity_margin_max"
                        android:layout_marginTop="@dimen/activity_margin_max"
                        android:layout_marginRight="@dimen/activity_margin_max"
                        android:layout_marginBottom="@dimen/activity_margin_min">

                        <RelativeLayout
                            android:id="@+id/relativeLayout1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="@dimen/layer_padding"
                                android:layout_weight="1"
                                android:background="@drawable/border_primary"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/activity_margin_min"
                                    android:layout_marginRight="@dimen/activity_margin_min"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="Overtime / Night Differential"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/abc_text_size_medium_material" />

                                <LinearLayout
                                    android:id="@+id/ll_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/dropdown_primary_selector"
                                    android:orientation="vertical"
                                    android:padding="@dimen/activity_padding_min">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_action_expand" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </FrameLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/activity_margin_max"
                        android:layout_marginRight="@dimen/activity_margin_max"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/activity_margin_max"
                        android:layout_marginTop="@dimen/activity_margin_min"
                        android:layout_marginRight="@dimen/activity_margin_max"
                        android:layout_marginBottom="@dimen/activity_margin_min">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="From"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/abc_text_size_medium_material" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/activity_margin_max"
                            android:layout_marginRight="@dimen/activity_margin_max"
                            android:background="@color/line" />

                        <TextView
                            android:id="@+id/lblTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="To"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/abc_text_size_medium_material" />

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/activity_margin_max"
                        android:layout_marginRight="@dimen/activity_margin_max"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/activity_margin_max"
                        android:layout_marginRight="@dimen/activity_margin_max"
                        android:layout_marginTop="@dimen/activity_margin_min"
                        android:layout_marginBottom="@dimen/activity_margin_min">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/border_primary"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginRight="@dimen/layer_padding">

                            <TextView
                                android:id="@+id/txtFrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_margin_min"
                                android:layout_marginRight="@dimen/activity_margin_min"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="--/--/---   --:-- --"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_color_invert"
                                android:textSize="@dimen/abc_text_size_menu_material" />

                            <LinearLayout
                                android:id="@+id/ll_from"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/dropdown_primary_selector"
                                android:orientation="vertical"
                                android:padding="@dimen/activity_padding_min">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_action_go_to_today" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_primary"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/layer_padding">

                            <TextView
                                android:id="@+id/txtTo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_margin_min"
                                android:layout_marginRight="@dimen/activity_margin_min"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="--/--/----   --:-- --"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_color_invert"
                                android:textSize="@dimen/abc_text_size_menu_material" />

                            <LinearLayout
                                android:id="@+id/ll_to"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/dropdown_primary_selector"
                                android:orientation="vertical"
                                android:padding="@dimen/activity_padding_min">

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_action_go_to_today" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/activity_margin_max"
                        android:layout_marginRight="@dimen/activity_margin_max"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblNoOfHrs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No. Of Hour(s)"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/primary"
                            android:visibility="gone" />

                        <ph.com.swak.view.FormText
                            android:id="@+id/txtNoOfHours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/form_view_selector"
                            android:ems="10"
                            android:hint="No. of Hour(s)"
                            android:inputType="numberDecimal"
                            android:padding="@dimen/activity_padding_min"
                            android:textColor="@color/text_color_invert"
                            android:textColorHint="@color/selected_gray"
                            android:textSize="@dimen/abc_text_size_medium_material"
                            android:layout_marginLeft="@dimen/activity_margin_max"
                            android:layout_marginTop="@dimen/activity_margin_min"
                            android:layout_marginRight="@dimen/activity_margin_max"
                            android:layout_marginBottom="@dimen/activity_margin_min" />
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/activity_margin_max"
                            android:layout_marginRight="@dimen/activity_margin_max"
                            android:background="@color/line" />

                        <TextView
                            android:id="@+id/lblReason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/layer_padding"
                            android:text="Reason"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/abc_text_size_medium_material"
                            android:visibility="gone" />

                        <ph.com.swak.view.FormText
                            android:id="@+id/txtReason"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/form_view_selector"
                            android:ems="10"
                            android:gravity="top"
                            android:hint="Reason"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:padding="@dimen/activity_padding_min"
                            android:textColor="@color/text_color_invert"
                            android:textColorHint="@color/selected_gray"
                            android:textSize="@dimen/abc_text_size_medium_material"
                            android:layout_marginLeft="@dimen/activity_margin_max"
                            android:layout_marginTop="@dimen/activity_margin_min"
                            android:layout_marginRight="@dimen/activity_margin_max"
                            android:layout_marginBottom="@dimen/activity_margin_max" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/triangle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/primary_triangle" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>